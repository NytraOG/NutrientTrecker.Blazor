@page "/listview-features"
@using Syncfusion.Blazor.Lists
<h2>ListView</h2>
<br/>
<div id = "ControlRegion">
			<h4>Select your favorite car:</h4>
    <SfListView CssClass="listview" ShowCheckBox="true" DataSource="@Data">
