                {13, 13, 12, 12, 12, 17},
                {11, 10, 9, 9, 10, 12},
                {18, 20, 21, 20, 17, 15},
                {18, 19, 19, 17, 15, 13},
                {21, 21, 21, 19, 18, 17},
                {21, 22, 21, 19, 16, 15},
                {16, 17, 17, 16, 14, 12 }
            };
        return DataSource;
    }
    string[] XAxisLabels = new string[] { "Nancy", "Andrew", "Janet", "Margaret", "Steven", "Michael", "Robert", "Laura", "Anne", "Paul", "Karin", "Mario" };
    string[] YAxisLabels = new string[] { "Mon", "Tue", "Wed", "Thu", "Fri", "Sat" };
