@page "/heatmapchart-features"
@using Syncfusion.Blazor.HeatMap
<h2>HeatMap Chart</h2>
<br/>
<div id = "ControlRegion">
<SfHeatMap Theme="Theme.Bootstrap5" DataSource="@HeatMapData" ShowTooltip="true">
        <HeatMapEvents TooltipRendering="@TooltipRendering"></HeatMapEvents>
        <HeatMapTitleSettings Text="Sales Revenue Per Employee (in 1000 US$)"></HeatMapTitleSettings>
        <HeatMapPaletteSettings Type="PaletteType.Gradient" ></HeatMapPaletteSettings>
        <HeatMapXAxis Labels="@XAxisLabels" ValueType="Syncfusion.Blazor.HeatMap.ValueType.Numeric" OpposedPosition="true"  IsInversed="true" ></HeatMapXAxis>
        <HeatMapYAxis Labels="@YAxisLabels" ValueType="Syncfusion.Blazor.HeatMap.ValueType.Numeric" OpposedPosition="true" IsInversed="true" ></HeatMapYAxis>
        <HeatMapLegendSettings Position="LegendPosition.Left" Alignment="Alignment.Center" ></HeatMapLegendSettings>
    </SfHeatMap>
</div>
<br/>
<div>
  <h3>Selected Features:</h3>
    <ul class="ulstyle">
      <li class="list"> Axis Type - Numeric</li>
      <li class="list"> Axis Opposed Position</li>
      <li class="list"> Axis Inversed</li>
      <li class="list"> Tooltip</li>
      <li class="list"> Palette Mode - Gradient</li>
      <li class="list"> Legend Placement - Left</li>
      <li class="list"> Legend Alignment - Center</li>
      <li class="list"> Theme - Bootstrap v5</li>
    </ul>
</div>
<br/>
<style>
    .ulstyle {
        margin: 0px;
        padding-left: 20px;
        display: inline-block;
    }
    .list {
    float: left;
    line-height: 20px;
    margin: 10px;
    min-width: 220px;
    }
</style>
